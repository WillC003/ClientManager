@model ClientNotesDto
@{
}
<div class="text-center">
    <h1 class="display-4">Create Client</h1>
</div>

<form method="post" enctype="multipart/form-data">

    <div class="row mb-3">
        <label class="col-sm-4 col-form-label">Note Content</label>
        <div class="col-sm-8">
            <textarea class="form-control" asp-for="Note_Content"></textarea>
            <span asp-validation-for="Note_Content" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-4 col-form-label">Updated By</label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="Updated_By">
            <span asp-validation-for="Updated_By" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-4 col-form-label">Created By</label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="Created_By">
            <span asp-validation-for="Created_By" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-4 col-form-label">Deleted By</label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="Deleted_By">
            <span asp-validation-for="Deleted_By" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-4 form-check">
            <input class="form-check-input" type="checkbox" asp-for="Is_Deleted">
            <label class="form-check-label" asp-for="Is_Deleted">Is Deleted</label>
        </div>
    </div>

    <div class="row">
        <div class="offset-sm-4 col-sm-4 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-4 d-grid">
            <a class="btn btn-outline-primary" asp-controller="ClientNotes" asp-action="Index" role="button">Cancel</a>
        </div>
    </div>
</form>